{% extends 'bootstrap_4_layout.html.twig' %}

{% block form_row %}
    {% apply spaceless %}
        <div class="form-group">
            {{ form_label(form) }}
            {{ form_errors(form) }}

            {% if captcha is defined %}
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com">
                </div>
            {% else %}
                {{ form_widget(form) }}
            {% endif %}
        </div>
    {% endapply %}
{% endblock %}
